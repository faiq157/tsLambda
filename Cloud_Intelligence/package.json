{
  "name": "notifications",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run build:init && npm run build:dir && npm run build:js && npm run build:install",
    "build:init": "rmdir /S /Q dist && mkdir dist",
    "build:dir": "cd dist && mkdir modules && mkdir services && cd..",
    "build:js": "cp *.js *.html dist && cp modules/*.js dist\\modules && cp services/*.js dist\\services",
    "build:install": "copy package*.json dist\\ && cd dist && npm ci --production",
    "package": "npm run build",
    "package:pack": "cd dist/ && bestzip ../ci-build.zip *",
    "deploy": "npm run package && aws lambda update-function-code --function-name <LAMBDA-FUNCTION-NAME> --zip-file fileb://artifact.zip --region us-east-1",
    "run": "node -r dotenv/config runner.js",
    "test": "mocha 'test/*.js' --timeout 60000"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.465.0",
    "@aws-sdk/client-sns": "^3.465.0",
    "@aws-sdk/client-sqs": "^3.465.0",
    "async": "^3.1.0",
    "dotenv": "^8.2.0",
    "flat": "^5.0.2",
    "fs": "0.0.1-security",
    "handlebars": "^4.1.2",
    "JSONStream": "^1.3.1",
    "lodash": "^4.17.15",
    "moment-timezone": "^0.5.25",
    "pg": "^8.7.1",
    "pg-pool": "^3.4.1",
    "redis": "^3.0.2",
    "redlock": "^4.2.0",
    "request": "^2.88.2",
    "request-promise": "^4.2.6",
    "serialize-error": "^8.1.0",
    "tz-lookup": "^6.1.18"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "mocha": "^8.1.3",
    "sinon": "^17.0.1"
  },
  "eslintConfig": {
    "extends": [
      "airbnb"
    ],
    "parser": "babel-eslint",
    "rules": {
      "semi": [
        "error",
        "never"
      ],
      "max-len": [
        "off"
      ]
    }
  }
}
